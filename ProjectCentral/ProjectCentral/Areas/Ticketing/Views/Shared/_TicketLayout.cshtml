<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <style>
        .navbar {
            position: fixed;
            background-image: linear-gradient(blue, purple);
            height: 100vh;
            width: 5rem;
            margin: 0;
            float: left;
            transition: width 200ms ease;
        }
        .flex {
            padding: 0;
            margin: 0;
            display: flex;
            flex-direction: column;
        }
        .navbar:hover {
            width: 15rem;
        }
        .navbar:hover .hidden {
            visibility: visible
        }
        .hidden {
            visibility: hidden
        }
        .smoothlist {
            border-radius: 15px;
            padding: 5px;
            border-width: 0px;
            border-color: purple;
            width: 12rem;
            margin: 1rem
        }
        .submit-btn {
            border-radius: 15px;
            padding: 5px;
            margin-top: 45vh !important;
            width: 12rem
        }
        .add-btn {
            border-radius: 15px;
            padding: 5px;
            position: absolute;
            top: 85vh !important;
            width: 12rem
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="flex">
            <div style="height:95vh" class="hidden">
                @if (ViewBag.Title == "Ticket Home")
                {
                    <partial name="_Filter" model="@Model.Filter"/>
                }
                @if (ViewBag.Title != "Add ticket")
                {
                    <a class="btn btn-primary add-btn text-white" asp-controller="Ticketing" asp-action="Add">Add</a>
                }
                else
                {
                    <a style="top:65vh !important" class="btn btn-primary add-btn text-white" asp-controller="Ticketing" asp-action="Add">Clear</a>
                    <a class="btn btn-primary add-btn text-white" asp-controller="TicketingHome" asp-action="Index">Home</a>
                }
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>
