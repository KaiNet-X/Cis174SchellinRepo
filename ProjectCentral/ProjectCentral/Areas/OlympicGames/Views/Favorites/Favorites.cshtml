@model List<Country>
@{

}

<div class="container text-center mt-5">
    <form asp-controller="Favorites" asp-action="Favorites" method="post">
        <div class="row mt-5">
            <a 
               style="border-bottom-right-radius: 0!important; border-top-right-radius: 0!important"
               class="col-sm btn btn-primary m-2 rounded"
               asp-controller="OlympicHome" asp-action="Home">Home</a>
            <button type="submit"
                style="border-bottom-left-radius: 0!important; border-top-left-radius: 0!important"
                class="col-sm btn btn-primary m-2 rounded">
                Clear Favorites
            </button>
        </div>
    </form>
    @foreach (Country country in Model)
    {
        <div class="row bg-light p-2 m-2 rounded text-center">
            <div class="col-md-4"><img src="@Url.Content(country.FlagPath)" /></div>
            <div class="col-md"><h3 class="form-text m-5 mb-0">@country.CountryName</h3></div>
            <div class="col-md"><h3 class="form-text m-5 mb-0">@country.Game.GameName</h3></div>
            <div class="col-md"><h3 class="form-text m-5 mb-0">@country.Sport.SportName: @country.Sport.Category.CategoryName</h3></div>
        </div>
    }
</div>