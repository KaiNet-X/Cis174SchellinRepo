<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />

    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

    <title>@ViewBag.Title</title>
</head>
<body style="font-family: 'Times New Roman'">
    <header>
        <nav class="nav bg-primary fixed-top">
            <span class="navbar-brand text-white align-middle">Olympic Games</span>
        </nav>
    </header>
    <div>
        @if (ViewBag.Favorites != null)
        {
            <div style="margin-left: 15rem; margin-right: 0rem" class="bg-info text-center mt-5 p-1 rounded">
                <a asp-controller="Favorites" asp-action="Favorites">
                    <h4 class="form-text text-light font-weight-bold">Favorites</h4>
                </a>
            </div>
        }
        @RenderBody()
    </div>
</body>
</html>
