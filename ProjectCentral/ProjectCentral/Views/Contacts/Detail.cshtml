@model Contact
@{ 
    Layout = "_ContactsLayout";
}
<input asp-for="ID" type="hidden" />
<div asp-validation-summary="All"></div>
<div class="row m-2">
    <label asp-for="Name" class="col-2">Name: </label>
    <input asp-for="Name" class="form-control col-6 offset-1" readonly />
</div>
<div class="row m-2">
    <label asp-for="PhoneNumber" class="col-2">Number: </label>
    <input asp-for="PhoneNumber" class="form-control col-6 offset-1" readonly />
</div>
<div class="row m-2">
    <label asp-for="Address" class="col-2">Address: </label>
    <input asp-for="Address" class="form-control col-6 offset-1" readonly />
</div>
<div class="row m-2">
    <label asp-for="Note" class="col-2">Note: </label>
    <input asp-for="Note" class="form-control col-6 offset-1" readonly />
</div>
<div class="row m-2">
    <a asp-controller="ContactsHome" asp-action="Index" class="btn btn-primary col-3">Home</a>
</div>>