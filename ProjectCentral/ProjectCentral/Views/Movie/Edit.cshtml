@model MovieModel
@{
    ViewBag.Title = ViewBag.Action + " Movie";
    Layout = "_MoviesLayout";
}
<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Year">Year</label>
        <input asp-for="Year" class="form-control" />
    </div>
    <div class="form-control">
        <label asp-for="GenreID">Genre</label>
        <select asp-for="GenreID" class="form-control">
            <option value="">Select a Genre</option>
            @foreach (GenreModel genre in ViewBag.Genres)
            {
                <option value="@genre.GenreID">@genre.Name</option>
            }
        </select>
    </div>
    <div class="form-control">
        <label asp-for="Rating">Rating</label>
        <input asp-for="Rating" class="form-control" />
    </div>
    <input type="hidden" asp-for="MovieID" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="MovieHome" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>