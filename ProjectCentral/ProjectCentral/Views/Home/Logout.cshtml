@{ 
    ViewBag.Title = "Logout";
}
<form asp-action="Logout" method="post">
    <h3 class="form-text">@ViewBag.Username, are you sure you want to sign out?</h3>
    <div class="row">
        <button type="submit" class="btn btn-primary col-1 m-1">Yes</button>
        <a asp-action="Index" class="btn btn-secondary col-1 m-1">No</a>
    </div>
</form>