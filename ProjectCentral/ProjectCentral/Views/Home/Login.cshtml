@model UserModel
@{ 
    ViewBag.Title = "Login";
}

<form asp-action="Login" method="post">
    <div class="row m-1">
        <label class="col-md-1 form-text">Username:</label>
        <input asp-for="@Model.UserName" style="height: 30px; align-self: center" class="col-md-4 form-control" />
    </div>
    <div class="row m-1">
        <label class="col-md-1 form-text">Password:</label>
        <input asp-for="@Model.Password" style="height: 30px; align-self: center" class="col-md-4 form-control" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-sm btn-outline-dark m-1 align-text-top">Log in</button>
        <a asp-action="Index" class="btn btn-sm btn-outline-dark m-1 align-text-top">Cancel</a>
    </div>
</form>